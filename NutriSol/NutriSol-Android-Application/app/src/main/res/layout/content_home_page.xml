<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomePage"
    tools:showIn="@layout/app_bar_home_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/bmi_calc"
                android:layout_width="247dp"
                android:layout_height="252dp"
                android:layout_marginTop="0dp"
                android:contentDescription="Get BMI"
                android:onClick="BMICheck"
                android:padding="20dp"
                android:src="@drawable/bmi_icon_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI Calculator"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="252dp"
                android:layout_marginTop="20dp"
                android:contentDescription="Diet Chart"
                android:onClick="clickedDiet"
                android:padding="20dp"
                android:src="@drawable/diet_chart_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diet Chart"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="247dp"
                android:layout_height="252dp"
                android:layout_marginTop="20dp"
                android:contentDescription="Get nutrients"
                android:onClick="clickedGet"
                android:padding="20dp"
                android:src="@drawable/calorie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrients Calculator"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>